{
  "app": {
    "name": "Catálogo de Planes Móviles",
    "version": "2.0.0",
    "description": "Sistema avanzado de comparación de planes móviles",
    "author": "IPv6 Informática"
  },
  "api": {
    "baseUrl": "https://ipv6-informatica.es/cart/data/",
    "endpoints": {
      "products": "products.json",
      "operators": "operators.json",
      "promotions": "promotions.json"
    },
    "timeout": 10000,
    "retries": 3,
    "cacheTime": 300000
  },
  "ui": {
    "defaultTheme": "light",
    "defaultOperator": "movistar",
    "defaultPlanType": "individual",
    "itemsPerPage": 12,
    "maxComparisons": 3,
    "animationDuration": 300,
    "debounceTime": 500
  },
  "features": {
    "darkMode": true,
    "comparison": true,
    "calculator": true,
    "filters": true,
    "search": true,
    "favorites": true,
    "shareLinks": true,
    "analytics": false,
    "lazyLoading": true,
    "infiniteScroll": false
  },
  "filters": {
    "price": {
      "min": 0,
      "max": 100,
      "step": 5,
      "currency": "€"
    },
    "data": {
      "options": ["all", "low", "medium", "high", "unlimited"],
      "default": "all"
    },
    "operators": {
      "multiSelect": true,
      "default": []
    },
    "planType": {
      "options": ["all", "individual", "familiar"],
      "default": "all"
    }
  },
  "images": {
    "lazyLoading": true,
    "placeholder": "https://via.placeholder.com/300x375/cccccc/666666?text=Cargando...",
    "fallback": "https://via.placeholder.com/300x375/cccccc/666666?text=Sin+Imagen",
    "quality": 85,
    "formats": ["webp", "jpg"]
  },
  "performance": {
    "debounceSearch": 300,
    "throttleScroll": 100,
    "preloadImages": 3,
    "virtualScrolling": false,
    "compression": true
  },
  "accessibility": {
    "highContrast": false,
    "reducedMotion": false,
    "screenReader": true,
    "keyboardNavigation": true,
    "focusIndicators": true
  },
  "analytics": {
    "trackClicks": false,
    "trackViews": false,
    "trackComparisons": false,
    "trackFilters": false
  },
  "seo": {
    "generateStructuredData": true,
    "generateSitemap": false,
    "enablePrerendering": false
  },
  "social": {
    "shareButtons": ["facebook", "twitter", "linkedin", "whatsapp"],
    "enableSharing": true
  },
  "notifications": {
    "position": "top-right",
    "duration": 5000,
    "maxVisible": 3,
    "showProgress": true
  },
  "cache": {
    "enableLocalStorage": true,
    "enableSessionStorage": true,
    "cacheImages": true,
    "cacheData": true,
    "maxCacheSize": "50MB"
  },
  "responsive": {
    "breakpoints": {
      "mobile": 768,
      "tablet": 1024,
      "desktop": 1200
    },
    "gridColumns": {
      "mobile": 1,
      "tablet": 2,
      "desktop": 3
    }
  },
  "strings": {
    "es": {
      "loading": "Cargando...",
      "error": "Error al cargar datos",
      "noResults": "No se encontraron resultados",
      "compare": "Comparar",
      "contract": "Contratar",
      "addToComparison": "Añadir a comparación",
      "removeFromComparison": "Quitar de comparación",
      "clearFilters": "Limpiar filtros",
      "showMore": "Ver más",
      "showLess": "Ver menos",
      "monthly": "€/mes",
      "annual": "€/año",
      "unlimited": "Ilimitado",
      "included": "Incluido",
      "notIncluded": "No incluido",
      "popular": "Popular",
      "recommended": "Recomendado",
      "new": "Nuevo",
      "offer": "Oferta"
    }
  },
  "wordpress": {
    "shortcodeName": "mobile_plans",
    "enableShortcodeZones": true,
    "autoEnqueueAssets": true,
    "compatibilityMode": true,
    "adminNotices": true
  }
}